
%h2= @detail['Direktion']
%h3= @detail['Massnahme']
%p= @detail['Kurzbeschrieb']

%p
  %strong Nr.:
  = @detail['Nr']
  %br
  %strong Aufgabenfeld:
  = @detail['Aufgabenfeld']
  %br
  %strong Rechtsgrundlage:
  = @detail['Rechtsgrundlage']

%table.responsive
  %thead
    %tr
      %th &nbsp;
      %th Voranschlag
      %th{colspan: 3} Aufgaben-/Finanzplan
    %tr
      %th
      %th 2014
      %th 2015
      %th 2016
      %th 2017
  %tbody
    - if @detail['Auswirkungen']['Finanzielle'].present?
      %tr
        %td Finanzielle Auswirkungen (in Mio. CHF)
        %td= @detail['Auswirkungen']['Finanzielle']['2014']
        %td= @detail['Auswirkungen']['Finanzielle']['2015']
        %td= @detail['Auswirkungen']['Finanzielle']['2016']
        %td= @detail['Auswirkungen']['Finanzielle']['2017']
    - elsif @detail['node'].present?
      %tr
        %td Finanzielle Auswirkungen (in Mio. CHF)
        %td= sprintf '%.3f', (@detail['node']['revenue']['budgets']['2014'].to_f / (10 ** 6))
        %td= sprintf '%.3f', (@detail['node']['revenue']['budgets']['2015'].to_f / (10 ** 6))
        %td= sprintf '%.3f', (@detail['node']['revenue']['budgets']['2016'].to_f / (10 ** 6))
        %td= sprintf '%.3f', (@detail['node']['revenue']['budgets']['2017'].to_f / (10 ** 6))
    - if @detail['Auswirkungen']['Finanzielle'].present?
      %tr
        %td Auswirkungen Vollzeitstellen
        %td= @detail['Auswirkungen']['Vollzeitstellen']['2014']
        %td= @detail['Auswirkungen']['Vollzeitstellen']['2015']
        %td= @detail['Auswirkungen']['Vollzeitstellen']['2016']
        %td= @detail['Auswirkungen']['Vollzeitstellen']['2017']
    - if @detail['Auswirkungen']['Gemeinden'].present?
      %tr
        %td Auswirkungen Gemeinden (in Mio. CHF)
        %td= @detail['Auswirkungen']['Gemeinden']['2014']
        %td= @detail['Auswirkungen']['Gemeinden']['2015']
        %td= @detail['Auswirkungen']['Gemeinden']['2016']
        %td= @detail['Auswirkungen']['Gemeinden']['2017']

%p= "+ = Entlastung / - = Belastung"

%a.close-reveal-modal &#215;
