:javascript
  window.OpenBudget = #{ {meta: @meta}.to_json.html_safe };

- content_for :title do
  = @meta['page_title']
- content_for :description do
  = @meta['meta_description']

.header
  .row
    .large-12.columns
      .share
        - if @subdomain.present?
          = link_to "https://twitter.com/intent/tweet?hashtags=ogd&text=#{u(@meta['page_title'])}&url=http%3A%2F%2F#{@subdomain}.budget.opendata.ch%2F&amp;via=OpendataCH", target: '_blank', title: 'Tweet', data: {tooltip: '', options: 'disable-for-touch:true'} do
            %i.icon-twitter
          = link_to "https://www.facebook.com/sharer.php?u=http%3A%2F%2F#{@subdomain}.budget.opendata.ch%2F", target: '_blank', title: 'Share', data: {tooltip: '', options: 'disable-for-touch:true'} do
            %i.icon-facebook-sign
          - mail_html = capture_haml do
            %i.icon-envelope
          = mail_to '', mail_html, subject: "#{@meta['title']}: #{@meta['subtitle']}", body: "Link:\nhttp://#{@subdomain}.budget.opendata.ch", title: 'per Email weiterempfehlen', data: {tooltip: '', options: 'disable-for-touch:true'}
          - mail_html = capture_haml do
            %i.icon-bullhorn
          = mail_to 'openfinance@opendata.ch', mail_html, subject: "OpenBudget Feedback: #{@subdomain}", title: 'Feedback', data: {tooltip: '', options: 'disable-for-touch:true'}

        = link_to 'https://github.com/tpreusse/open-budget/tree/experiment', target: '_blank', title: 'Quellcode', data: {tooltip: '', options: 'disable-for-touch:true'} do
          %i.icon-github

      %h1
        = link_to 'http://www.opendata.ch/' do
          = image_tag 'opendatach-icon.png', alt: 'OpenData.ch', title: 'OpenData.ch'
        = "#{sanitize(@meta['title'])}: #{sanitize(@meta['subtitle'])}"


    .large-12.columns.controls-container
      .left.large-12.columns
        %ul.segmented-control.type.button-group.radius
          %li
            %a.button.secondary.active{title: 'Finanzielle Auswirkungen', data: {tooltip: '', options: 'disable-for-touch:true', value:'budgets'}} Geld
          %li
            %a.button.secondary{title: 'Auswirkungen Vollzeitstellen', data: {tooltip: '', options: 'disable-for-touch:true', value:'positions'}} Stellen

        %ul.segmented-control.data.button-group.radius
          - @meta['data'].each do |dataSet|
            %li
              - data = {value:dataSet['url']}
              - if dataSet['description']
                - data[:tooltip] = ''
                - data[:options] = 'disable-for-touch:true'
              %a.button.secondary{title: dataSet['description'], data:data}= dataSet['name']

        %ul.segmented-control.levels.button-group.radius
          %li
            %a.button.secondary{data:{value:1}} Direktionen
          %li
            %a.button.active.secondary{data:{value:2}} Massnahmen

        %ul.segmented-control.year.button-group.radius
          / Voranschlag
          %li
            %a.button.secondary.active 2014
          / Aufgaben-/Finanzplan
          %li
            %a.button.secondary 2015
          %li
            %a.button.secondary 2016
          %li
            %a.button.secondary 2017

.upgrade-browser
  .row
    .large-12.columns
      %h3 Browser inkompatibel
      %p Leider unterstüzt ihr Browser SVG nicht.
      %p
        Wir empfehlen die neuste Version von
        <a href="http://goo.gl/Z0UIl" target="_blank">Google Chrome</a> oder <a href="http://goo.gl/LwIPJ" target="_blank">Firefox</a>

      %p
        Alternativ können sie eine Erweiterung für ihren jetzigen Browser installieren: <a href="http://goo.gl/3i1hs" target="_blank">Google Chrome Frame</a>.<br /><em>Nach der Installation muss Internet Explorer neugestartet werden (alle "Internet Explorer"-Fenster schliessen und wieder öffnen).</em>

%svg.main

.rest
  .row
    #detail-modal.reveal-modal.large
    #no-detail-modal.reveal-modal.small
      %p
        Es sind keine zusätzlichen Informationen verfügbar. Versuchen sie es bei der Datenquelle:
        = link_to @meta['source']['text'], @meta['source']['url']

    .large-12.columns
      %h3 Legende
      .row
        .large-6.columns
          %h4 Direktionen
          %ul.inline-list.legend
        .large-6.columns
          %h4 Begriffe
          %p
            - @meta['data'].each do |dataSet|
              - if dataSet['description']
                %strong= "#{dataSet['name']}:"
                = dataSet['description']
                %br
            %strong Geld:
            Finanzielle Auswirkungen
            %br
            %strong Stellen:
            Auswirkungen Vollzeitstellen
            %br
      %p
        = link_to 'Medienmitteilung Verein OpenData.ch', 'http://opendata.ch/2013/07/asp-2014/'
        \-
        = link_to @meta['source']['text'], @meta['source']['url']

      %h3 Tabellarische Auflistung
      .table-container
        %table.main
          %thead
            %tr
              %th{colspan:2} Massnahme
              %th
                2014
                %br
                %span.format (Mio. CHF)
              %th
                2015
                %br
                %span.format (Mio. CHF)
              %th
                2016
                %br
                %span.format (Mio. CHF)
              %th
                2017
                %br
                %span.format (Mio. CHF)
          %tfoot
            %tr
              %td{colspan:2} Total
              %td
              %td
              %td
              %td
          %tbody

      .opendatach
        %p
          = link_to 'http://www.opendata.ch/' do
            = image_tag 'opendatach.png', alt: 'OpenData.ch'
